#!/usr/bin/env ruby
require 'open3'
def indent(string)
  puts "       #{string}"
end

def print_results(output)
  output.split(/\n/).map { |s| indent(s) }
end

def slurp(filename)
  File.read(filename)
rescue
  nil
end

puts "-----> Decrypting configuration settings"

build_dir, cache_dir, env_dir = ARGV

Dir["#{env_dir}/*"].each do |filename|
  ENV[File.basename(filename)] = slurp(filename)
end

Dir.chdir(build_dir)
command = "bin/rails runner \"cf = Xirr::Cashflow.new; cf << Xirr::Transaction.new(-1000,  date: '2014-01-01'.to_date); Xirr::Transaction.new(-2000,  date: '2014-03-01'.to_date); Xirr::Transaction.new( 4500, date: '2015-12-01'.to_date); cf.xirr; puts system('find / -name .ruby_inline')"

Open3.popen3(command) do |stdin, stdout, stderr, status|
  if status.value.success?
    print_results(stdout.read)
    puts "find 2:"
    `find / -name '.ruby_inline'`
    exit 0
  else
    print_results(stderr.read)
    exit 1
  end
end


exit 0
